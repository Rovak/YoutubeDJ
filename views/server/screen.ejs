<!DOCTYPE html>
<html>
  <head>
    <title>DJ Server</title>
    <link href="/css/screen.css" media="screen, projection" rel="stylesheet" type="text/css" />
  </head>
  <body>
    <div id="player_wrap">
      <div id="player"></div>
    </div>
    <div id="playlist"></div>
    <div id="qrcode"></div>

    <script src="http://<%= socket_server %>/socket.io/socket.io.js"></script>
    <script src="/vendor/swfobject/swfobject.js"></script>
    <script src="/vendor/jquery.min.js"></script>
    <script src="/vendor/jquery.qrcode.js"></script>
    <script src="/vendor/underscore.js"></script>
    <script src="/vendor/backbone.js"></script>
    <script src="/vendor/handlebars.js"></script>

    <!-- Playlist Template -->
    <script type="text/template" id="playlist_template">
      <img src="/img/screen-by-razko.jpg" style="width: 100%">
      <ul>
      {{#each playlist}}
        <li>
          <div class="img" style="background-image: url({{this.image}});"></div>
          <div class="info">
            <span class="title">{{this.title}}</span>
            <span class="artist">{{this.title}}</span>
          </div>
        </li>
      {{/each}}
      </ul>

    </script>

    <script>
        var room_id = '<%= room %>';
        var app = {
          host: '<%= host %>'
        };
        var socket_server = '<%= socket_server %>';
        var client_url = 'http://<%= host %>/room/<%= room %>';
    </script>
    <script src="/js/screen.js"></script>
  </body>
</html>